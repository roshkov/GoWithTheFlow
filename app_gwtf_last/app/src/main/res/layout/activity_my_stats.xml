<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyStats">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />









    <TextView
        android:id="@+id/mycons"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="MyConsumptions"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/TopSeparator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycons" />



    <View
        android:id="@+id/averageWater"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watertextview" />

    <View
        android:id="@+id/myWater"
        android:layout_width="240dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watertextview" />

    <TextView
        android:id="@+id/watertextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="Water"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycons" />

    <TextView
        android:id="@+id/waterAveragetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Average"
        android:textColor="#ffff"
        app:layout_constraintStart_toStartOf="@+id/averageWater"
        app:layout_constraintTop_toBottomOf="@+id/watertextview" />

    <TextView
        android:id="@+id/mewaterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="Me"
        android:textColor="#ffff"
        app:layout_constraintStart_toStartOf="@+id/myWater"
        app:layout_constraintTop_toBottomOf="@+id/watertextview" />


    <View
        android:id="@+id/waterElectroSeparator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterKronaSaved" />



    <TextView
        android:id="@+id/electricitytv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="Electricity"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/watertextview"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/hetingtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="Heating"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/electricitytv"
        tools:layout_editor_absoluteX="44dp" />

    <TextView
        android:id="@+id/savedWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:text="Saved:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watertextview" />

    <TextView
        android:id="@+id/waterLitersSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="84dp"
        android:text="0 L"
        app:layout_constraintStart_toEndOf="@+id/savedWater"
        app:layout_constraintTop_toBottomOf="@+id/watertextview" />

    <TextView
        android:id="@+id/waterKronaSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="116dp"
        android:text="0 kr"
        app:layout_constraintStart_toEndOf="@+id/savedWater"
        app:layout_constraintTop_toBottomOf="@+id/watertextview" />


    <View
        android:id="@+id/ElectroHeatSeparator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="188dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterElectroSeparator" />




</android.support.constraint.ConstraintLayout>

